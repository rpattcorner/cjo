{
	"appname": "cjo",
	"loadbalancers": [
		{
			"name": "cjo",
			"region": "us-east-1",
			"listeners": [
				{
					"lb-port": 80,
					"lb-protocol": "HTTP",
					"instance-port": 80,
					"instance-protocol": "HTTP"
				}
			]
		}
	],
	"server_pools": [
		{
			"name": "cjo_pool",
			"ssh_user": "ubuntu",
			"min-size": 1,
			"max-size": 1,
			"wait_for_nodes":1,
			"zones": [
				"us-east-1c",
				"us-east-1d"
			],
			"loadbalancers": [
				{
					"concurrent-load-balancer": "cjo"
				}
			],
			"basis": {
				"launch-config": {
					"name": "cjo",
					"server": "portal",
					"size": "t2.micro",
					"iam-role": "cjo_node_role"
				}
			}
		}
	],
	"servers": [
		{
			"name": "portal",
			"ami-id": "ami-12ab017a",
			"ssh_user":"ubuntu",
			"storage": [
				{
					"size": 10
				}
			],
			"run_list": [
				"recipe[apache2]"
			],
			"size": "t2.micro",
			"ingress_rules": [
				{
					"port": 80,
					"hosts": [
						"0.0.0.0/0"
					]
				},
				{
					"port": 443,
					"hosts": [
						"0.0.0.0/0"
					]
				}
			],
			"vpc":{
                     "vpc_id":"<%= ENV['VPCID'] %>",
                     "subnet_id":"<%= ENV['TARGET_PUBLIC_SUBNET'] %>"
            }
		}
	],
	"admins": [
		{
			"name": "cjomgt",
			"email": "someone@dorsetwest.com"
		}
	]
}
